#!/bin/bash

# Start Celery Worker in Production Mode

set -o errexit
set -o nounset

echo "ðŸ‘· Starting Celery Worker (Production)..."
echo "ðŸ“Š Log level: WARNING"

exec celery -A src.tasks.celery_app worker \
    --loglevel=warning \
    --concurrency=4 \
    --max-tasks-per-child=1000 \
    --time-limit=300 \
    --soft-time-limit=270
