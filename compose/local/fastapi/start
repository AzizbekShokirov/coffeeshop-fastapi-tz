#!/bin/bash

# Start FastAPI Application in Development Mode

set -o errexit
set -o nounset

echo "ğŸš€ Starting FastAPI Development Server..."
echo "ğŸ“ Running with hot-reload enabled"
echo "ğŸ”— API will be available at http://0.0.0.0:8000"

